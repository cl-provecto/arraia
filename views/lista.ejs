<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LISTAGEM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Página de Listagem dos Filmes</h1>

    <div class="d-grid gap-2">
        <a class="btn btn-primary" href="/add" role="button" style="margin-bottom: 5px;">Adicionar Filme/Série</a>
    </div>

    <table class="table table-hover table-striped table-bordered border-primary">
        <thead class="table-dark text-center">
            <tr>
                <th>Equipe_ID</th>
                <th>Jurado</th>
                <th>Categoria_ID</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody class="table-group-divider text-center">
            <% for (let item of lista) { %>
            <tr>
                <td><%= item.equipe_id %></td>
                <td><%= item.jurado %></td>
                <td><%= item.categoria_id %></td>
                <td><%= item.notas %></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p>
        <a href="/">Início</a>
    </p>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <script>
        function excluir(id) {
            var res = confirm("Deseja Realmente Excluir o Filme?")

            if(res) {
                $.ajax({
                    url: `/delete/${id}`,
                    type: 'DELETE',
                    success: function(resultado) {
                        if (resultado == 'OK') {
                            window.location.reload()
                        } else {
                            alert(resultado)
                        }
                    }
                })
            }
        }
    </script>
  </body>
</html>
